{
    "name": "web-polyfill",
    "version": "0.7.0",
    "license": "AGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "An automatic CDN service for Web polyfills, which is based on TypeScript, Node.js & UnPkg.",
    "keywords": [
        "web",
        "polyfill",
        "cdn",
        "auto",
        "service",
        "typescript",
        "javascript"
    ],
    "homepage": "https://polyfill.web-cell.dev/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/Web-polyfill.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/Web-polyfill/issues"
    },
    "engines": {
        "node": ">=18"
    },
    "dependencies": {
        "@tech_query/node-toolkit": "^1.2.1",
        "dom-renderer": "^2.3.0",
        "dotenv": "^16.4.5",
        "fs-extra": "^11.2.0",
        "happy-dom": "^15.7.3",
        "koapache": "^2.2.2",
        "marked": "^14.1.2",
        "tslib": "^2.7.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^20.16.5",
        "husky": "^9.1.5",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "tsx": "^4.19.0",
        "typescript": "~5.6.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,yml,ts}": "prettier --write"
    },
    "scripts": {
        "prepare": "husky",
        "test": "lint-staged",
        "generate": "rm -rf public/  &&  tsx source/",
        "start": "web-server public/ -p 8080"
    }
