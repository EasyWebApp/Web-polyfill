{
    "name": "web-polyfill",
    "version": "0.6.0",
    "license": "AGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "An automatic CDN service for Web polyfills, which is based on TypeScript, Node.js & JSDelivr.",
    "keywords": [
        "web",
        "polyfill",
        "cdn",
        "auto",
        "service",
        "typescript",
        "javascript"
    ],
    "homepage": "https://polyfill.web-cell.dev/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/Web-polyfill.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/Web-polyfill/issues"
    },
    "dependencies": {
        "fs-extra": "^10.0.1",
        "koapache": "^2.2.1",
        "marked": "^4.0.12",
        "node-fetch": "^2.6.7"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/marked": "^4.0.2",
        "@types/node": "^17.0.21",
        "@types/node-fetch": "^2.6.1",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.5",
        "prettier": "^2.5.1",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,yml,ts}": "prettier --write"
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "generate": "rm -rf public/  &&  ts-node source/",
        "start": "web-server public/ -p 8080"
    }
}
