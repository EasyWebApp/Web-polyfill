{
    "name": "web-polyfill",
    "version": "0.6.4",
    "license": "AGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "An automatic CDN service for Web polyfills, which is based on TypeScript, Node.js & JSDelivr.",
    "keywords": [
        "web",
        "polyfill",
        "cdn",
        "auto",
        "service",
        "typescript",
        "javascript"
    ],
    "homepage": "https://polyfill.web-cell.dev/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/Web-polyfill.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/Web-polyfill/issues"
    },
    "engines": {
        "node": ">=18"
    },
    "dependencies": {
        "@tech_query/node-toolkit": "^1.2.1",
        "dotenv": "^16.3.1",
        "fs-extra": "^11.1.1",
        "koapache": "^2.2.2",
        "marked": "^9.0.2"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.2",
        "@types/node": "^18.17.17",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "prettier": "^3.0.3",
        "tsx": "^3.12.10",
        "typescript": "~5.2.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,yml,ts}": "prettier --write"
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "generate": "rm -rf public/  &&  tsx source/",
        "start": "web-server public/ -p 8080"
    }
}
