{
    "name": "web-polyfill",
    "version": "0.6.3",
    "license": "AGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "An automatic CDN service for Web polyfills, which is based on TypeScript, Node.js & JSDelivr.",
    "keywords": [
        "web",
        "polyfill",
        "cdn",
        "auto",
        "service",
        "typescript",
        "javascript"
    ],
    "homepage": "https://polyfill.web-cell.dev/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/Web-polyfill.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/Web-polyfill/issues"
    },
    "dependencies": {
        "@tech_query/node-toolkit": "^1.2.0",
        "dotenv": "^16.0.1",
        "fs-extra": "^10.1.0",
        "koapache": "^2.2.1",
        "marked": "^4.0.16",
        "node-fetch": "^2.6.7"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/marked": "^4.0.3",
        "@types/node": "^14.18.18",
        "@types/node-fetch": "^2.6.1",
        "husky": "^8.0.1",
        "lint-staged": "^12.4.2",
        "prettier": "^2.6.2",
        "ts-node": "^10.8.0",
        "typescript": "^4.7.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,yml,ts}": "prettier --write"
    },
    "scripts": {
        "prepare": "husky install",
        "test": "lint-staged",
        "generate": "rm -rf public/  &&  ts-node source/",
        "start": "web-server public/ -p 8080"
    }
